<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-signin'}) do |f| %>
  <h2 class="form-signin-heading">Sign in</h2>
  <div class="form-inputs">
    <%= f.input :email, :required => false, :autofocus => true, :label => false, :placeholder => "Email address" %>
    <%= f.input :password, :required => false, :label => false, :placeholder => 'Password' %>
    <%= f.input :remember_me, :as => :boolean, :label => false, :inline_label => 'Remember me' if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign in" %>
  </div>
  <%= render "devise/shared/links" %>
<% end %>

