- unless @projects.blank?
  .active-projects
    %table.table
      = render partial: 'users/project', collection: @projects
- unless @bonusly_updates.blank?
  .bonusly-updates
    %ul.media-list
      - @bonusly_updates.each do |message|
        %li.media
          %a.pull-left
            = raw message
        =# render partial: 'bonus', locals: { message: message } 


